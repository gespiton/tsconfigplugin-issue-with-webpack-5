{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext.array"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}
